<?xml version="1.0" ?>
<%
  #Set simulation parameters and compile
  #Run in the worlds folder : erb -T 1 actors.world.erb > actors.world
  #Actor0
  x_distance = 8
  y_distance = 5
  z_distance = 0

  #Actor1
  x1_distance = 7
  y1_distance = 5
  z1_distance = 0

%>

<sdf version="1.4">
  <world name="default">
    <include>
      <uri>model://ground_plane</uri>
    </include>
    <include>
      <uri>model://sun</uri>
    </include>
    <actor name="actor_walk">
      <skin>
        <filename>moonwalk.dae</filename>
        <scale>1.0</scale>
      </skin>
      <pose> <%= x_distance %> 0 0 0 0</pose>
      <animation name="walking">
        <filename>walk.dae</filename>
        <scale>1.0</scale>
        <interpolate_x>true</interpolate_x>
      </animation>
      <script>
        <loop>true</loop>
        <delay_start>0</delay_start>
        <auto_start>true</auto_start>
        <trajectory id="0" type="walking">
          <waypoint>
            <time>0</time>
            <pose><%= x_distance %> <%= y_distance %> 0 0 0 -1.57</pose>
          </waypoint>
          <waypoint>
            <time>6</time>
            <pose><%= x_distance %> <%= -y_distance %> 0 0 0 -1.57</pose>
          </waypoint>
          <waypoint>
            <time>8</time>
            <pose><%= x_distance %> <%= -y_distance %> 0 0 0 1.57</pose>
          </waypoint>
          <waypoint>
            <time>14</time>
            <pose><%= x_distance %> <%= y_distance %> 0 0 0 1.57</pose>
          </waypoint>
          <waypoint>
            <time>16</time>
            <pose><%= x_distance %> <%= y_distance %> 0 0 0 -1.57</pose>
          </waypoint>
        </trajectory>
      </script>
    </actor>
    <actor name="actor_run">
      <skin>
        <filename>run.dae</filename>
        <scale>1.0</scale>
      </skin>
      <pose><%= x1_distance %>  0 0 0 0</pose>
      <animation name="walking">
        <filename>walk.dae</filename>
        <scale>1.0</scale>
        <interpolate_x>true</interpolate_x>
      </animation>
      <script>
        <loop>true</loop>
        <delay_start>0</delay_start>
        <auto_start>true</auto_start>
        <trajectory id="0" type="walking">
          <waypoint>
            <time>0</time>
            <pose><%= x1_distance %> <%= -y1_distance %> 0 0 0 1.57</pose>
          </waypoint>
          <waypoint>
            <time>2</time>
            <pose><%= x1_distance %> <%= y1_distance %> 0 0 0 1.57</pose>
          </waypoint>
          <waypoint>
            <time>2.5</time>
            <pose><%= x1_distance %> <%= y1_distance %> 0 0 0 -1.57</pose>
          </waypoint>
          <waypoint>
            <time>5</time>
            <pose><%= x1_distance %> <%= -y1_distance %> 0 0 0 -1.57</pose>
          </waypoint>
          <waypoint>
            <time>5.5</time>
            <pose><%= x1_distance %> <%= -y1_distance %> 0 0 0 1.57</pose>
          </waypoint>
        </trajectory>
      </script>
    </actor>
  </world>
</sdf>
